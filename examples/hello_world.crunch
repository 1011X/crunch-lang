:: args: run --quiet
:: expected exit status: 0
:: expected stdout: Hello, World!

extern
    @callconv("C")
    fn puts(string: *const u8) -> i32;
end

fn main() -> i32
    let bytes: arr[u8; 13] := b"Hello, world!"

    return puts(as_ptr(&bytes))
end

fn as_ptr(array: &arr[u8; 13]) -> *const u8
    return array as *const u8
end
