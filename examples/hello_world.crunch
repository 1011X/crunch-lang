:: args: run --quiet
:: expected exit status: 0
:: expected stdout: Hello, World!

extern
    @callconv("C")
    fn puts(string: *const i8) -> i32;
end

fn main() -> i32
    return puts(as_ptr(&b"Hello, world!"))
end

fn as_ptr(array: slice[u8]) -> *const u8
    array as *const slice[u8] as *const u8
end
