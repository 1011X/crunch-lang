exposed type Divisior
    divider: int

    fn new(self, divider: int) -> Divisior
        self.divider := divider
    end
    
    @inline
    fn divides(self, number: int) -> bool
        if number % self.two == 0
            true
        else
            false
        end
    end
end

pkg enum Kinds
