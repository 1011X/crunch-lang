fn main()
    let code = "++++++++++[>+++++++>++++++++++>+++>+<<<<-]>++.>+.+++++++..+++.>++.<<+++++++++++++++.>.+++.------.--------.>+.>."

    brainfuck(code)
end

fn brainfuck(code: str)
    let ptr = 0
    let tape = [0; 30000]

    for char in code
        if char == '>'
            ptr += 1
        else if char == '<'
            ptr -= 1
        else if char == '+'
            tape[ptr] += 1
        else if char == '-'
            tape[ptr] -= 1
        else if char == '.'
            empty
        else if char == ','
            println("Can't take input yet")
        else if char == '['
            empty
        else if char == ']'
            empty
        else
            println("Unrecognized char: {}", char)
            break
        end
    end
end
