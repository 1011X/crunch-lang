{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Crunch",
    "patterns": [{
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#types"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                "name": "keyword.control.crunch",
                "match": "\\b(if|while|for|return|fn|let)\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.double.crunch",
            "begin": "'",
            "end": "'",
            "patterns": [{
                "name": "constant.character.escape.crunch",
                "match": "\\\\."
            }]
        },
        "comments": {
            "name": "comment.block.crunch",
            "begin": "::",
            "end": "\n"
        },
        "constants": {
            "name": "constant.crunch",
            "patterns": [{
                "name": "constant.numeric.crunch",
                "match": "[0-9]"
            }]
        },
        "types": {
            "name": "types.crunch",
            "match": "\\b(void|str|int|float|bool)\\b"
        }
    },
    "scopeName": "source.crunch"
}
